<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Customer.Buttom_Navi.FragmentShopping_Customer">

    <LinearLayout
        android:id="@+id/second_cart"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/cartvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="My Cart"

            android:textColor="@color/colorprimary1"
            android:textSize="@dimen/_25ssp" />

        <ImageView
            android:id="@+id/imgvisible"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginTop="@dimen/_85sdp"
            android:background="@drawable/bg_notification"
            android:padding="@dimen/_50sdp"
            android:src="@drawable/shopping_cart" />

        <TextView
            android:id="@+id/textemptyvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Empty Favorite List"
            android:textColor="@color/colorprimary1"
            android:textSize="@dimen/_25ssp" />

        <TextView
            android:id="@+id/itemvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="Fill out the shopping cart for your detailed food"
            android:textAlignment="center"
            android:textColor="@color/secprimary1"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_margin="@dimen/_5sdp"

                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp">
                <ImageView
                    android:id="@+id/back_viewCustomer"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/back"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:rotation="180"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_60sdp"
                android:text="My Cart"
                android:textColor="@color/colorprimary1"
                android:textSize="@dimen/_24ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_shopping"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_275sdp"
                android:padding="@dimen/_5sdp"

                >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Item Selected"

                android:textColor="@color/colorprimary1"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="5"
                    android:textColor="@color/maincolor"

                    android:textSize="@dimen/_13ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    android:text="Items"
                    android:textColor="@color/maincolor"

                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deliverycost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Delivery Cost"

                android:textColor="@color/colorprimary1"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/deliverycost_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:text="5"
                android:textColor="@color/maincolor"

                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:text="EGP"
                android:textColor="@color/maincolor"

                android:textSize="@dimen/_13ssp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_5sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:background="#B6B7B7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:padding="@dimen/_5sdp"
                android:text="Total"
                android:textColor="@color/colorprimary1"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/deliverycost_total"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="5"
                android:textColor="@color/maincolor"
                android:textSize="@dimen/_22ssp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:text="EGP"
                android:textColor="@color/maincolor"
                android:textSize="@dimen/_22ssp" />
        </LinearLayout>

        <Button
            android:id="@+id/button2"

            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_next"
            android:fontFamily="@font/metrophobic"
            android:gravity="center"
            android:text="Checkout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

    </LinearLayout>


</LinearLayout>