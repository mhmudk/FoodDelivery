<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.ViewCustomer">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".99" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toTopOf="@+id/guideline17"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintStart_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toTopOf="@+id/guideline12">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/mahmoudprofile" />


        <LinearLayout
            android:id="@+id/main_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
  android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center_horizontal"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_mainprofile_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text=" Mahmoud Khattab"
                    android:textColor="@color/colorprimary1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/phone_profile_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Phone Number"
                    android:textColor="@color/colorprimary1"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/gotoLogin_mainprofile_ad"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_next"
                android:gravity="center"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/maincolor"

                android:textSize="@dimen/_15ssp"
                android:theme="@style/MyMaterialThemeForEditProfile"
                app:icon="@drawable/edit"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/_5sdp"

                app:iconSize="@dimen/_15sdp"
                app:iconTint="@color/maincolor" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/location_profile" />

                <TextView
                    android:id="@+id/mainprofile_location_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/poppins"
                    android:text="My Location"
                    android:textColor="#330507"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/language" />

                <TextView
                    android:id="@+id/mainprofile_language_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/poppins"
                    android:text="Language"
                    android:textColor="#330507"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/nori_profile" />

                <TextView
                    android:id="@+id/mainprofile_active_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/poppins"
                    android:text="Active Notification"
                    android:textColor="#330507"
                    android:textSize="@dimen/_16ssp" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:shadowColor="@color/maincolor"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/support_profile" />

                <TextView
                    android:id="@+id/mainprofile_support_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/poppins"
                    android:text="Support"
                    android:textColor="#330507"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/change_passwrod" />

                <TextView
                    android:id="@+id/mainprofile_changepassword_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/poppins"
                    android:text="Change Password"
                    android:textColor="#330507"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signout_ad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
android:layout_marginTop="@dimen/_40sdp"
               android:backgroundTint="#F7F0EC"
                android:fontFamily="@font/metrophobic"
                android:text="Sign Out"
                android:textAllCaps="false"
                android:textColor="#FF2300"
                android:textSize="@dimen/_14ssp"
                android:theme="@style/MyMaterialTheme_profile"
                app:icon="@drawable/out_button"
                app:iconGravity="textStart"

                app:iconPadding="@dimen/_10sdp"
                app:iconTint="#FF2300" />


        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".98" />

</androidx.constraintlayout.widget.ConstraintLayout>
