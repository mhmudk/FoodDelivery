<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Admin.AdminPannel.AdminPannel">

    <Button
        android:id="@+id/search_admin_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/btn_lognin"
        android:text="Search Food"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textColor="#B6B7B7"
        android:fontFamily="@font/poppins"
        android:gravity="start|center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textAllCaps="false"

        android:textSize="@dimen/_14ssp"
        android:drawableLeft="@drawable/search_icon"
        android:padding="@dimen/_3sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_5sdp"

            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"   android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:src="@drawable/users_admin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins"
                    android:text=" Users"
                    android:textSize="@dimen/_25ssp" />

                <TextView
                    android:id="@+id/count_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="45"
                    android:textSize="@dimen/_35ssp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:src="@drawable/orders_admin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins"
                    android:text="Orders"
                    android:textSize="@dimen/_25ssp" />

                <TextView
                    android:id="@+id/count_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="@dimen/_35ssp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:src="@drawable/motor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins"
                    android:text="Deliverys"
                    android:textSize="@dimen/_25ssp" />

                <TextView
                    android:id="@+id/count_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="150"
                    android:textSize="@dimen/_35ssp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:src="@drawable/menu_pannel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins"
                        android:text="Menu"
                    android:textColor="@color/colorprimary1"
                    android:textSize="@dimen/_25ssp" />
<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_35sdp"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_gravity="center"
    android:layout_weight="1"
    app:cardElevation="@dimen/_8sdp">

    <ImageView
        android:id="@+id/goto_menu"
        android:layout_gravity="center"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"

        android:src="@drawable/get_menu" />
</androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_47sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_40sdp">

        <Button
            android:id="@+id/orders_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_creataccount"
            android:gravity="center"
            android:text="New Orders"
            android:textAllCaps="false"
            android:textColor="@color/colorprimary1"
            android:textSize="@dimen/_16ssp" />

    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_47sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp">
        <Button
            android:id="@+id/food_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_next"
            android:gravity="center"
            android:text="Add Meal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            />

    </com.balysv.materialripple.MaterialRippleLayout>


</LinearLayout>