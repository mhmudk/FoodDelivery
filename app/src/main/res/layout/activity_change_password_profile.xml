<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Customer.Buttom_Navi.Profile.ChangePasswordProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
android:layout_marginTop="@dimen/_10sdp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"

            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">
            <ImageView
                android:id="@+id/back_toprofile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/back"
                android:scaleType="fitCenter"
                android:padding="@dimen/_5sdp"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/colorprimary1"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your email to receive a link to create a new password via email"

        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/colorprimary1"
        android:textSize="@dimen/_14ssp"
        android:textAlignment="center"

        android:fontFamily="@font/metrophobic"/>
    <EditText
        android:id="@+id/pass_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/btn_lognin"
        android:drawableLeft="@drawable/lockk"
        android:drawablePadding="@dimen/_8sdp"
        android:hint="Old Password"
        android:inputType="numberPassword"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:textColorHint="#B6B7B7"
        android:textSize="@dimen/_14ssp"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true" />
    <TextView
        android:id="@+id/forget_profilepassword"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_13sdp"
        android:fontFamily="@font/metrophobic"
        android:text="Forgot your password?"

        android:textAllCaps="false"
        android:textColor="@color/secprimary1"
        android:textSize="@dimen/_14ssp" />
    <EditText
        android:id="@+id/passconf_new"
        android:layout_width="match_parent"
        android:inputType="numberPassword"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_lognin"
        android:drawableLeft="@drawable/lockk"
        android:drawablePadding="@dimen/_8sdp"
        android:hint="New Password"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:textColorHint="#B6B7B7"
        android:textSize="@dimen/_14ssp"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true" />
    <Button
        android:id="@+id/save_newpassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:background="@drawable/button_next"
        android:gravity="center"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />
</LinearLayout>